<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfoli_item.id %>">
    <%= image_tag portfolio_img(portfoli_item.thumb_image, 'thumb') %>
    <div class="card-body">
      <span><%= link_to portfoli_item.title, portfoli_show_path(portfoli_item) %></span>
      <p class="card-text"><%= portfoli_item.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
